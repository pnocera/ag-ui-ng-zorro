/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@ag-ui/core": [
        "./projects/ag-ui/core/src/public-api"
      ],
      "@ag-ui/ng-zorro": [
        "./projects/ag-ui/ng-zorro/src/public-api"
      ],
      "@ag-ui/schematics": [
        "./projects/ag-ui/schematics/src/public-api"
      ],
      "@ag-ui/theming": [
        "./projects/ag-ui/theming/src/public-api"
      ]
    },
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./projects/ag-ui/ng-zorro/tsconfig.lib.json"
    },
    {
      "path": "./projects/ag-ui/ng-zorro/tsconfig.spec.json"
    },
    {
      "path": "./projects/ag-ui/core/tsconfig.lib.json"
    },
    {
      "path": "./projects/ag-ui/core/tsconfig.spec.json"
    },
    {
      "path": "./projects/ag-ui/theming/tsconfig.lib.json"
    },
    {
      "path": "./projects/ag-ui/theming/tsconfig.spec.json"
    },
    {
      "path": "./projects/ag-ui/schematics/tsconfig.lib.json"
    },
    {
      "path": "./projects/ag-ui/schematics/tsconfig.spec.json"
    }
  ]
}
